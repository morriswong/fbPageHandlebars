<div class="header clearfix container-fluid">
    <div class="col-md-2 column container-fluid">
        {{#profile}}
            <img class="img-thumbnail" alt="140x140" src="{{fbPhoto}}" />
            <p>{{fbName}}</p>
            <p>Total liked pages: {{totalPage}}</p>
        {{/profile}}

    </div>
    {{#profile}}
    <a href="/home">
    <div class="col-md-8 column">
            <h1>Welcome {{fbName}}!</h1>
    </div>
    </a>
    <div class="col-md-2 column">
        <a href="/checkFriends">
            <button class="btn btn-default" type="button">
                See your "common likes"
            </button>
        </a>
        <button class="btn btn-default" type="button">
            Share it to your friends
        </button>
    </div>
    <div class="progress">
        <div class="progress-bar" role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100" style="width: 100%">
        </div>
    </div>
    <a href="/logout"><button>Logout</button></a>
    <a href="/monthLikes"><button>Page I like this month</button></a>
    {{!-- share button --}}
    <div class="fb-share-button" data-href="http://159.203.93.124:8080/" data-layout="button" data-size="large" data-mobile-iframe="true">
        <a class="fb-xfbml-parse-ignore" target="_blank" href="https://www.facebook.com/sharer/sharer.php?u=http%3A%2F%2Flocalhost%3A8080%2F&amp;src=sdkpreparse">Share</a>
    </div>
    {{/profile}}
</div>
